<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scoreFragmentList_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height=".4dp"
        android:background="#26000000"
        android:id="@+id/textviewwidthclor"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/newalarmlist_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newalarmlist_layout"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewwidthclor">

        <TextView
            android:id="@+id/problemTextViewScore_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.4"
            android:textAlignment="textStart"
            android:gravity="start"
            android:padding="4dp"
            android:text="TextView"
            />

        <Spinner
            android:id="@+id/spinnernumber_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:gravity="start"
            android:textAlignment="textStart"/>

    </LinearLayout>






</LinearLayout>
