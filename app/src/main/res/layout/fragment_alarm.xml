<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mcaredemo.mitu.mcaredemoproject.AlarmFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:id="@+id/textViewtitle_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:text="@string/rules_answer"

            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="8sp"
            android:textColor="@color/loginButton"
            />


        <TextView
            android:id="@+id/textViewtitle_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".01"

            android:background="@color/bottomButton"
             />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewScore_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.8"

            />

        <TextView
            android:id="@+id/textViewtitle_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".01"
            android:layout_marginBottom="2dp"

            android:background="@color/bottomButton"
            />

        <LinearLayout
            android:id="@+id/buttoncommunity_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewScore_1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnprogress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="অগ্রগতি"
                android:textColor="@color/backgroundColor"
                android:layout_margin="2dp"
                android:drawablePadding="2dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_show_chart_black_24dp"
                android:drawableTint="@color/backgroundColor"
                android:background="@drawable/button_border_focus_layout"/>

            <Button
                android:id="@+id/btnnewproblem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="জরুরী \nবার্তা"
                android:textColor="@color/backgroundColor"
                android:layout_margin="2dp"
                android:drawablePadding="2dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_message_black_24dp"
                android:drawableTint="@color/backgroundColor"

                android:background="@drawable/button_border_focus_layout"/>


            <Button
                android:id="@+id/btnemergency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="দ্বিসাপ্তাহিক \n রিপোর্ট"
                android:textColor="@color/backgroundColor"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_timeline_black_24dp"
                android:drawablePadding="2dp"
                android:drawableTint="@color/backgroundColor"
                android:background="@drawable/button_border_focus_layout"/>


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
